<div class="section">
  <h3 class="section__header">
    {{model.name}} <span class="util-pull-right">{{model.averageRating}} {{pluralize model.averageRating singular="star" plural="stars"}}</span>
  </h3>
  <p>
    {{model.description}}
  </p>

  <div class="grid grid--flex">
    <div class="col-2-3">
      <div class="section__sub">
        {{#image-insure
          class="image__center"
          defaultSrc='/images/campgrounds_campsite.jpg'
          targetSrc=imageSrc
          as |imageSrc|}}
          <div>
            <img class="img" src={{imageSrc}}>
          </div>
        {{/image-insure}}
      </div>
    </div>
  </div>

  <div class="grid grid--flex">
    <div class="col-1-3">
      <div class="section__sub">
        <h4 class="section__subheader">Ammenities</h4>
        <div>
          <span class="section__sub__item">Bathroom: {{if model.hasBathroom "Yes" "No"}}</span>
          <span class="section__sub__item">Shower: {{if model.hasShower "Yes" "No"}}</span>
        </div>
      </div>
    </div>
    <div class="col-2-3">
      <div class="section__sub">
        <h4 class="section__subheader">Ratings</h4>
        {{#each model.ratings as |rating|}}
          {{campground-rating
            rating=rating}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
